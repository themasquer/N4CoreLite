@model IEnumerable<DersQueryModel>
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Liste";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container">
    <partial name="_Message" />
@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Yeni</a>
    </p>
}
    @if (Model is not null && Model.Any())
    {
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Adi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OgrenciSayisi)
                </th>
                <th class="w-25"></th>
            </tr>
        </thead>
        <tbody>
	    @foreach (var item in Model) {
	        <tr>
                <td>
					@Html.DisplayFor(modelItem => item.Adi)
				</td>
                <td>
                    @Html.DisplayFor(modelItem => item.OgrenciSayisi)
                </td>
		        <td class="text-end">
                @if (User.IsInRole("admin"))
                {
			        <a asp-action="Details" asp-route-id="@item.Id">Detay</a>@:&nbsp;|&nbsp;
			        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>@:&nbsp;|&nbsp;
			        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                }
		        </td>
	        </tr>
	    }
        </tbody>
    </table>
    }
</div>



